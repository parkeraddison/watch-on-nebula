{
	"manifest_version": 2,
	"name": "watch-on-nebula",
	"description": "Prompts you to watch a YouTube video on Nebula instead, if available.",
	"version": "0.0.1",
	"icons": {
		"64": "icons/watchonnebula_x64.png"
	},
	"background": {
		"scripts": [
			"browser-polyfill.min.js",
			"background_script.js"
		]
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.youtube.com/*"
			],
			"js": [
				"browser-polyfill.min.js",
				"content_script.js"
			],
			"css": [
				"popup-style.css"
			],
			"run_at": "document_end"
		}
	],
	"permissions": [
		"https://www.youtube.com/",
		"https://youtube.com/",
		"https://standard.tv/"
	]
}